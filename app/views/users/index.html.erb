
<%= stylesheet_link_tag 'users/index', media: 'all' %>

<% @users.each do |user| %>
  <div class="home-users">
    <div class="user-photo">
      <img src="<%= user.photo %>" alt="user-photo">
    </div>
    <div class="user-data">
      <h2><%= link_to user.name, user_path(user) %></h2>
      <p class="posts-counter">Number of Posts: <%= user.posts.count %></p>
    </div>
  </div>
<% end %>
