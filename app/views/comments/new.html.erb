<h1>Add New Comment!</h1>
<hr class="col-md-6 mb-5">


<%= form_with(model: @comment, url: user_post_comments_path(@user, @post)) do |form| %>

  <div class="col-md-6 mb-3">
    <%= form.label :text, style: "display: block",class: "fw-bold form-label" %>
    <%= form.text_area :text, class: "form-control", placeholder: "Comment", rows: "3" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Add Comment", class: 'btn btn-primary' %>
  </div>
<% end %>